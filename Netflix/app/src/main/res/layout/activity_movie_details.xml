<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#000"
    tools:context=".MainScreens.MovieDetails">

    <ImageView
        android:id="@+id/imagedetails"
        android:layout_width="415dp"
        android:layout_height="231dp"
        android:layout_marginStart="100dp"
        android:layout_marginTop="5dp"
        android:layout_marginEnd="100dp"
        android:layout_marginBottom="46dp"
        app:layout_constraintBottom_toTopOf="@+id/moviename"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.0" />

    <Button
        android:id="@+id/playbutton"
        android:layout_width="391dp"
        android:layout_height="61dp"
        android:layout_marginEnd="16dp"
        android:layout_marginBottom="400dp"
        android:paddingStart="150dp"
        android:text="Play"
        android:textSize="20dp"
        android:textStyle="bold"
        android:drawableLeft="@drawable/ic_baseline_play_arrow_24"
        android:padding="0dp"
        android:textAlignment="viewStart"
        android:background="@drawable/playbuttonstroke"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/moviename"
        app:layout_constraintVertical_bias="0.233" />

    <TextView
        android:id="@+id/moviename"
        android:layout_width="367dp"
        android:layout_height="42dp"
        android:text="Movie Name"
        android:textColor="#fff"
        android:textSize="20dp"
        android:textStyle="bold"
        android:gravity="center"
        android:layout_marginStart="20dp"
        android:layout_marginEnd="20dp"
        android:layout_marginBottom="28dp"
        app:layout_constraintBottom_toTopOf="@id/playbutton"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/imagedetails"
        tools:layout_editor_absoluteX="12dp"
        tools:layout_editor_absoluteY="255dp" />

</androidx.constraintlayout.widget.ConstraintLayout>


