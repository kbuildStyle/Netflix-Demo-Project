<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Activities.StepThree">
    <include layout="@layout/tool_stepthree"/>

    <LinearLayout
        android:layout_width="430dp"
        android:layout_height="714dp"
        android:orientation="vertical"
        app:layout_editor_absoluteY="70dp">

        <RelativeLayout
            android:layout_width="wrap_content"
            android:layout_height="126dp"
            android:layout_marginLeft="130dp"
            android:layout_marginTop="56dp"
            android:layout_marginBottom="12dp">

            <ImageView
                android:layout_width="64dp"
                android:layout_height="80dp"
                android:layout_marginLeft="60dp"
                android:layout_marginTop="20dp"
                android:src="@drawable/ic_baseline_lock_24"/>
            <ImageView
                android:layout_width="187dp"
                android:layout_height="122dp"
                android:layout_marginRight="5dp"
                android:src="@drawable/ic_baseline_radio_button_unchecked_24"/>

        </RelativeLayout>
        <TextView
            android:layout_width="175dp"
            android:layout_height="41dp"
            android:layout_marginLeft="130dp"
            android:layout_marginBottom="10dp"
            android:text="STEP 3 OF 3"
            android:textAlignment="center"
            android:textColor="#000"
            android:id="@+id/stepthree"
            android:textSize="25dp"/>
        <TextView
            android:layout_width="394dp"
            android:layout_height="wrap_content"
            android:layout_marginStart="16dp"
            android:layout_marginBottom="13dp"
            android:text="Set up your payment."
            android:textAlignment="center"
            android:textColor="#000"
            android:textStyle="bold"
            android:textSize="35dp"/>
        <TextView
            android:layout_width="240dp"
            android:layout_height="74dp"
            android:layout_marginStart="100dp"
            android:layout_marginBottom="7dp"
            android:text="Your membership starts as soon as you set up payment"
            android:textAlignment="center"
            android:textColor="#4E4D4D"
            android:textSize="20dp"/>
        <TextView
            android:layout_width="253dp"
            android:layout_height="79dp"
            android:layout_marginStart="100dp"
            android:text="No commitments.
            Cancel online anytime."
            android:gravity="center"
            android:textColor="#000"
            android:textSize="20dp"/>

        <LinearLayout
            android:id="@+id/paymentlinearlayout"
            android:layout_width="wrap_content"
            android:layout_height="71dp"
            android:orientation="horizontal"
            android:layout_marginLeft="50dp"
            android:background="@drawable/button_stroke">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_gravity="center"
                android:gravity="center"
                android:text="Credit or debit card"
                android:textColor="#000"
                android:textSize="15dp"/>
            <Space
                android:layout_width="2dp"
                android:layout_height="2dp"/>

            <ImageView
                android:layout_width="34dp"
                android:layout_height="match_parent"
                android:gravity="center"
                android:src="@drawable/visacard"/>
            <Space
                android:layout_width="2dp"
                android:layout_height="2dp"/>
            <ImageView
                android:layout_width="34dp"
                android:layout_height="match_parent"
                android:gravity="center"
                android:src="@drawable/mastercard"/>
            <Space
                android:layout_width="2dp"
                android:layout_height="2dp"/>
            <ImageView
                android:layout_width="34dp"
                android:layout_height="match_parent"
                android:gravity="center"
                android:src="@drawable/americanexpress"/>
            <Space
                android:layout_width="2dp"
                android:layout_height="2dp"/>
            <ImageView
                android:layout_width="34dp"
                android:layout_height="match_parent"
                android:gravity="center"
                android:src="@drawable/lastcard"/>
            <Space
                android:layout_width="2dp"
                android:layout_height="2dp"/>

            <ImageView
                android:layout_width="34dp"
                android:layout_height="match_parent"
                android:gravity="center"
                android:src="@drawable/ic_baseline_chevron_right_24"/>

        </LinearLayout>

    </LinearLayout>



</androidx.constraintlayout.widget.ConstraintLayout>