<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Activities.ChooseYourPlan">
    <include layout="@layout/toolbar_stepone"/>

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginStart="0dp"
        android:layout_marginTop="70dp"
        android:layout_marginBottom="-4dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">
            
            <TextView
                android:layout_width="337dp"
                android:layout_height="wrap_content"
                android:layout_marginStart="33dp"
                android:layout_marginTop="20dp"
                android:text="Choose the plan that's right for you."
                android:textStyle="bold"
                android:textColor="#000"
                android:textSize="25dp"/>
            <TextView
                android:layout_width="337dp"
                android:layout_height="wrap_content"
                android:layout_marginStart="33dp"
                android:layout_marginTop="10dp"
                android:text="Downgrade or Upgrade"
                android:textColor="#000"
                android:textSize="20dp"/>

            <androidx.cardview.widget.CardView
                android:layout_width="300dp"
                android:layout_height="250dp"
                android:layout_marginLeft="60dp"
                android:layout_marginTop="15dp"
                app:cardCornerRadius="15dp"
                app:cardElevation="50dp">

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="48dp"
                    android:layout_marginTop="10dp"
                    android:orientation="horizontal">
                    
                    <RadioButton
                        android:layout_width="wrap_content"
                        android:layout_height="33dp"
                        android:buttonTint="#0097A7"
                        android:id="@+id/radiobuttonforbasic">
                        
                    </RadioButton>
                    
                    <TextView
                        android:layout_width="241dp"
                        android:layout_height="49dp"
                        android:text="Basic"
                        android:textColor="#000"
                        android:textStyle="bold"
                        android:textSize="20dp">

                    </TextView>
                </LinearLayout>

                <TextView
                    android:layout_width="92dp"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="33dp"
                    android:layout_marginTop="40dp"
                    android:textColor="#000"
                    android:text="₹  349/month">

                </TextView>

                <ImageView
                    android:layout_width="287dp"
                    android:layout_height="179dp"
                    android:layout_marginTop="70dp"
                    android:src="@drawable/basicplanimage">

                </ImageView>

            </androidx.cardview.widget.CardView>
            <androidx.cardview.widget.CardView
                android:layout_width="300dp"
                android:layout_height="250dp"
                android:layout_marginLeft="60dp"
                android:layout_marginTop="15dp"
                app:cardCornerRadius="15dp"
                app:cardElevation="50dp">

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="48dp"
                    android:layout_marginTop="10dp"
                    android:orientation="horizontal">

                    <RadioButton
                        android:layout_width="wrap_content"
                        android:layout_height="33dp"
                        android:buttonTint="#0097A7"
                        android:id="@+id/radiobuttonforstandard">

                    </RadioButton>

                    <TextView
                        android:layout_width="241dp"
                        android:layout_height="49dp"
                        android:text="Standard"
                        android:textColor="#000"
                        android:textStyle="bold"
                        android:textSize="20dp">

                    </TextView>
                </LinearLayout>

                <TextView
                    android:layout_width="92dp"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="33dp"
                    android:layout_marginTop="40dp"
                    android:textColor="#000"
                    android:text="₹  649/month">

                </TextView>

                <ImageView
                    android:layout_width="287dp"
                    android:layout_height="179dp"
                    android:layout_marginTop="70dp"
                    android:src="@drawable/standardplanimage">

                </ImageView>

            </androidx.cardview.widget.CardView>
            <androidx.cardview.widget.CardView
                android:layout_width="300dp"
                android:layout_height="250dp"
                android:layout_marginLeft="60dp"
                android:layout_marginTop="15dp"
                app:cardCornerRadius="15dp"
                app:cardElevation="50dp">

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="48dp"
                    android:layout_marginTop="10dp"
                    android:orientation="horizontal">

                    <RadioButton
                        android:layout_width="wrap_content"
                        android:layout_height="33dp"
                        android:buttonTint="#0097A7"
                        android:id="@+id/radiobuttonforpremium">

                    </RadioButton>

                    <TextView
                        android:layout_width="241dp"
                        android:layout_height="49dp"
                        android:text="Premium"
                        android:textColor="#000"
                        android:textStyle="bold"
                        android:textSize="20dp">

                    </TextView>
                </LinearLayout>

                <TextView
                    android:layout_width="92dp"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="33dp"
                    android:layout_marginTop="40dp"
                    android:textColor="#000"
                    android:text="₹  799/month">

                </TextView>

                <ImageView
                    android:layout_width="match_parent"
                    android:layout_height="178dp"
                    android:layout_marginTop="80dp"
                    android:src="@drawable/premiumplanimage">

                </ImageView>

            </androidx.cardview.widget.CardView>

            <Button
                android:layout_width="300dp"
                android:layout_height="60dp"
                android:id="@+id/continuebuttonchooseplan"
                android:layout_marginLeft="60dp"
                android:layout_marginTop="10dp"
                android:backgroundTint="@color/progressbar"
                android:text="CONTINUE"
                android:textColor="#fff"
                android:textSize="20dp"/>



        </LinearLayout>

    </ScrollView>

</androidx.constraintlayout.widget.ConstraintLayout>