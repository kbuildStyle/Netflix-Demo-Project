<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Activities.FinishUpAccount">
    <include layout="@layout/toolbar_stepone"/>

    <LinearLayout
        android:layout_width="434dp"
        android:layout_height="460dp"
        android:layout_marginTop="110dp"
        android:orientation="vertical"
        app:layout_constraintTop_toTopOf="parent" >

        <ImageView
            android:layout_width="match_parent"
            android:layout_height="85dp"
            android:src="@drawable/ic_baseline_check_circle_outline_24"/>

        <TextView
            android:layout_width="396dp"
            android:layout_height="40dp"
            android:id="@+id/step1of3finish"
            android:layout_marginLeft="10dp"
            android:gravity="center"
            android:text="STEP 1 OF 3"
            android:textColor="#000"
            android:textSize="20dp"/>

        <TextView
            android:layout_width="414dp"
            android:layout_height="wrap_content"
            android:layout_marginLeft="10dp"
            android:gravity="center"
            android:text="Finish setting up your account."
            android:textStyle="bold"
            android:textColor="#000"
            android:textSize="25dp"/>

        <TextView
            android:layout_width="411dp"
            android:layout_height="160dp"
            android:gravity="center"
            android:text="Netflix is personalised for you.Create
a password to watch Netflix on
any device at any time"
            android:textColor="#000"
            android:textSize="25dp"/>

        <Button
            android:layout_width="291dp"
            android:layout_height="58dp"
            android:id="@+id/continuefinish"
            android:layout_marginLeft="70dp"
            android:backgroundTint="@color/progressbar"
            android:text="CONTINUE"
            android:textColor="#fff"
            android:textSize="20dp"/>
    </LinearLayout>

</androidx.constraintlayout.widget.ConstraintLayout>